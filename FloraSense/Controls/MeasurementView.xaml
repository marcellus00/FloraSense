<UserControl
    x:Class="FloraSense.MeasurementView"
    x:Name="Measurement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <TextBlock FontSize="{Binding ElementName=Measurement, Path=FontSize}" Foreground="{Binding ElementName=Measurement, Path=Foreground}">
        <Run Text="{Binding ElementName=Measurement, Path=Icon}"/> <Run Text="{Binding ElementName=Measurement, Path=Value}"/><Run Text="{Binding ElementName=Measurement, Path=Unit}"/>
    </TextBlock>
</UserControl>
